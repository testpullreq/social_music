<tr>
    <td>
        html element: <%= element %>
        <br />
        html form element name: <%= name %>
        <br />
        display name: <%= display_name %>
    </td>
    <td>
        <% if (['select', 'radio', 'checkbox'].indexOf(element) > -1) { %>
            <div class="extended-options" style="display: none;">
                <table class="table">
                    <thead>
                    <tr>
                        <th>text label</th>
                        <th>value</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody class="added-values">

                    </tbody>
                </table>
                <form class="add-value-form">
                    <div class="form-group">
                        <label>text label</label>
                        <input name="label" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>value</label>
                        <input name="value" class="form-control">
                    </div>
                    <button class="btn btn-success">add value</button>
                </form>
            </div>
        <% } %>
    </td>
    <td>
        <button class="btn btn-danger delete">delete</button>
        <br />
        <button class="btn btn-info up">up</button><button class="btn btn-info down">down</button>
        <br />
        <button class="btn btn-default edit">edit</button>
        <% if (['select', 'radio', 'checkbox'].indexOf(element) > -1) { %>
            <br />
            <button class="btn btn-info show-extended">show/hide extended</button>
        <% } %>
    </td>
</tr>